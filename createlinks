use esmith::Build::CreateLinks  qw(:all);


#--------------------------------------------------
# actions for nethserver-ejabberd-update event
#--------------------------------------------------

my $event = "nethserver-ejabberd-update";

event_actions($event,
              'initialize-default-databases' => '00',
              'nethserver-ejabberd-conf' => '02',
              'firewall-adjust' => '30',
              'runlevel-adjust' => '40');
templates2events("/etc/ejabberd/ejabberd.cfg",  $event);
# Use slapd.pem for ejabberd cert file (temporary hack)
templates2events("/etc/ejabberd/ejabberd.pem",  $event);
event_services($event, 'httpd' => 'reload');
event_services($event, 'ejabberd' => 'restart');


#--------------------------------------------------
# actions for nethserver-ejabberd-save event
#--------------------------------------------------

$event = "nethserver-ejabberd-save";

event_services($event, 'ejabberd' => 'restart');
event_services($event, 'httpd' => 'reload');
templates2events("/etc/ejabberd/ejabberd.cfg",  $event);


#--------------------------------------------------
# actions for nethserver-ejabberd-uninstall event
#--------------------------------------------------

$event = "nethserver-ejabberd-uninstall";

event_actions($event,
              'nethserver-ejabberd-uninstall' => '02',
              'firewall-adjust' => '40',
              'runlevel-adjust' => '50');

templates2events("/etc/ejabberd/ejabberd.cfg",  $event);
event_services($event, 'httpd' => 'reload');


#--------------------------------------------------
# actions for group-modify event
# Restart ejabberd on jabberadmins group update
#--------------------------------------------------

$event = "group-modify";

event_actions($event, 'nethserver-ejabberd-update-group' => '90');

#--------------------------------------------------
# actions for migration-import event
#--------------------------------------------------

$event = "migration-import";
event_actions($event, 'nethserver-ejabberd-migrate' => 50);

exit;
